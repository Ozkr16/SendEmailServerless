    <UserSecretsId>186f3b02-a5a4-4a51-9783-57ff88909038</UserSecretsId>
  </PropertyGroup>
  <ItemGroup>
    <PackageReference Include="Azure.Security.KeyVault.Secrets" Version="4.0.3" />
